@model IEnumerable<MvcBlog.Models.Makale>

@{
    ViewBag.Title = "BlogAra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .yuvarlak {
        width: 75px;
        height: 75px;
        border-radius: 75px;
        border-color: #ecf0f1;
        border-width: 2px;
        border-style: solid;
    }
</style>
<br />

<div class="col-md-8">

    <h3>Aradığınız İçerikteki Makaleler</h3>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kategori.KategoriAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uye.KullaniciAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Baslık)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Okunma)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uye.KullaniciAdi)
                </td>
                <td>
                    <a href="/Home/MakaleDetay/@item.MakaleID">@Html.DisplayFor(modelItem => item.Baslık)</a>
                </td>

                <td>
                    <img class="yuvarlak" width="75" src="@item.Foto" alt="@item.Baslık" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarih)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Okunma)
                </td>

            </tr>
        }

    </table>
</div>