<!DOCTYPE html>
<style>
   
    .siyah {
        color: darkgray;
    }
</style>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="~/logo/logo.png"/>
    <title>Mert DEMİR Blog</title>
    
    <link href="~/Content/Kaynak/startbootstrap-sb-admin-gh-pages/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    
    <link href="~/Content/Kaynak/startbootstrap-sb-admin-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    
    <link href="~/Content/Kaynak/startbootstrap-sb-admin-gh-pages/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    
    <link href="~/Content/Kaynak/startbootstrap-sb-admin-gh-pages/css/sb-admin.css" rel="stylesheet">
    
    <link href="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

   
    <link href="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/css/blog-home.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript">

    </script>
    <link href="~/Content/css/bootstrap-tagsinput.css" rel="stylesheet" />
</head>


<body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
            <left><img src="~/logo/logo.png" class="img-rounded" width="25" alt="Cinque Terre" /></left>
            <a class="navbar-brand" href="/Home/Index/">Mert DEMİR Blog &nbsp</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="nav navbar-nav">

                    <li class="nav-item">

                        <a class="nav-link" href="/Home/Index">
                            <i class="fas fa-fw fa-home"></i>
                            Ana Sayfa
                            <span class="sr-only"></span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hakkimda/"><i class="fas fa-fw fa-user-circle"></i>Hakkımda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Iletisim/"><i class="fas fa-fw fa-info-circle"></i>İletişim</a>
                    </li>
                    @*
                        @if (Session["uyeId"] != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Uye/Index/@Session["uyeId"]/">@Session["Kullaniciadi"].ToString()</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/Uye/Logout/">Çıkış</a>
                            </li>
                            if (Convert.ToUInt32(Session["YetkiId"]) == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/AdminIndex/" target="_blank">Admin Paneli</a>
                                </li>
                            }

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Uye/Login/">Giriş</a>
                            </li>
                        }
                    *@
                </ul>
            </div>
            <ul class="nav navbar-right top-nav">
                <li class="nav-item dropdown no-arrow">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-circle fa-fw"></i>
                    </a>
                    <div class="dropdown-menu dropdown" aria-labelledby="userDropdown">
                        @if (Session["uyeId"] != null)
                        {
                            <a class="dropdown-item" href="/Uye/Index/@Session["uyeId"]"> @Session["Kullaniciadi"].ToString() </a>
                            <a class="dropdown-item" href="/Uye/Logout/">Çıkış</a>
                            if (Convert.ToUInt32(Session["YetkiId"]) == 1)
                            {
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" target="_blank" href="/Admin/AdminIndex">Admin Paneli</a>
                            }
                        }
                        else
                        {

                            <a class="dropdown-item" href="/Uye/Login/">Giriş</a>
                            <a class="dropdown-item" href="/Uye/Create/">Kayıt Ol</a>

                        }

                    </div>
                </li>
            </ul>
        </div>
    </nav>


    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">

                @*Content*@
                @RenderBody()

            </div>

            
            <div class="col-md-4">

                <!-- Search Widget -->
                @Html.Partial("BlogAraPartial")

                <div class="card my-4" align="center">
                    
                    @{
                        Html.RenderAction("SabitAdminAlan", "Home");
                    }
                </div>


                <!-- Categories Widget -->
                <div class="card my-4">

                    @{
                        Html.RenderAction("KategoriPartial", "Home");
                    }
                </div>

                <div class="card my-4">
                    @{
                        Html.RenderAction("PopulerMakaleler", "Home");
                    }

                </div>

                <!-- Side Widget -->
                <div class="card my-4">
                    @{
                        Html.RenderAction("SonYorumlar", "Home");
                    }

                </div>
            </div>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top" style="display:inline;">
        <i class="fas fa-angle-up"></i>
    </a>



   
    <footer class="py-5 bg-dark" id="footer">
        <section class="container" id="footer-bottom">
            <div class="container-inner">

               @* <a id="back-to-top" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>*@


                <p class="m-0 text-center text-white">Mert DEMİR' in Web Günlüğü &copy; @DateTime.Now.Year</p>
            </div>
        </section>

        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    <script src="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/Content/js/bootstrap-tagsinput.js"></script>
    <script src="~/Content/js/bootstrap-tagsinput-angular.js"></script>
</body>
</html>
